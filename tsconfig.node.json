{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["vite.config.ts", "src/main/**/*"]
}
